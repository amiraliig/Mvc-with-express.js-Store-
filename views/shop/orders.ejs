<%- include('../includes/head.ejs') %>
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <h1>Your Orders</h1>

    <% if (!orders || orders.length === 0) { %>
      <h2>No orders yet.</h2>
    <% } else { %>

      <% orders.forEach(o => { %>
        <section class="card">
          <div class="card__content">
            <h2>Order #<%= o._id %></h2>
          

            <% if (!o.items || o.items.length === 0) { %>
              <p>No products in this order.</p>
            <% } else { %>
              <ul>
                <% o.items.forEach(p => { %>
                  <li>
                    <strong><%= p.title %></strong>
                    — Qty: <%= p.quantity %>
                    — Price: $<%= p.price %>
                    — Line total: $<%= p.quantity * p.price %>
                  </li>
                <% }) %>
              </ul>

              <p>
                <strong>
                  Order total: $
                  <%= o.items.reduce((sum, p) => sum + (p.quantity * p.price), 0) %>
                </strong>
              </p>
            <% } %>
          </div>
        </section>
      <% }) %>

    <% } %>
  </main>

<%- include('../includes/end.ejs') %>
