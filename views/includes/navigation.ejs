<header class="main-header">
    <nav class="main-header__nav">
        <a class="brand" href="/">NightShift</a>
        <ul class="main-header__item-list">
            <li class="main-header__item"><a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a></li>
            <li class="main-header__item"><a class="<%= path === '/products' ? 'active' : '' %>"
                    href="/products">Products</a></li>

            <% if (isLoggedIn) { %>
                <li class="main-header__item"><a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
                </li>
                <li class="main-header__item"><a class="<%= path === '/orders' ? 'active' : '' %>"
                        href="/orders">Orders</a>
                </li>
                <% } %>
                    <% if (isLoggedIn && isAdmin) { %>
                        <li class="main-header__item"><a class="<%= path === '/admin/add-product' ? 'active' : '' %>"
                                href="/admin/add-product">Add Product</a></li>
                        <li class="main-header__item"><a class="<%= path === '/admin/add-product' ? 'active' : '' %>"
                                href="/admin/products">Admin Products</a></li>
                        <% } %>

                            <% if (!isLoggedIn) { %>
                                <li class="main-header__item"><a
                                        class="btn btn--ghost <%= path === '/signup' ? 'active' : '' %>"
                                        href="/signup">Signup</a></li>
                                <li class="main-header__item"><a
                                        class="btn btn--ghost <%= path === '/login' ? 'active' : '' %>"
                                        href="/login">Login</a></li>
                                <% } %>
                                    <% if (isLoggedIn) { %>
                                        <li class="main-header__item main-header__item--logout">
                                            <form action="/logout" method="post">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <button class="btn btn--ghost" type="submit">Logout</button>
                                            </form>
                                        </li>
                                        <% } %>
        </ul>
    </nav>
</header>