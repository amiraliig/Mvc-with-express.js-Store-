    <form action="/cart" method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input style="display: none;" name="productId" type="text" value="<%= product._id %>">
        <button class="btn" type="submit">Add to Cart</button>
    </form>
    <% } %>
